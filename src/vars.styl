@import "nord"

nord0-dark = #242830
nord0-darker = #191c22

/* top bar configuration */

topbar-height = 0
topic-height = 2em
topbar-border = 1px
topbar-border-color = nord0
topbar-bg-color = nord0
topbar-shadow-color = nord0

/* main color scheme */

base-fg-color = nord6
sidebar-fg-color = nord4
placeholder-fg-color = nord4
input-fg-color = base-fg-color

sidebar-bg-color = nord0
topic-bg-color = nord1
buffer-bg-color = nord1
input-bg-color = nord2

hover-buffer-fg-color = nord5
active-buffer-fg-color = nord6
hover-buffer-bg-color = nord2
active-buffer-bg-color = nord3

scrollbar-track-color = sidebar-bg-color
scrollbar-thumb-color = nord0-darker

/* IRC role color scheme */

role-symbol-color = white
role-none-color = #ccc
role-voice-color = #0099E0
role-halfop-color = #00D166
role-op-color = #9F5FAE
role-admin-color = #FF7800
role-owner-color = #FA3A2F

/* spacing and sizing configuration */

input-area-padding = 1em
input-area-height = 4em

max-server-width = 10em
max-nickname-width = 8em

/* vars below this point should only be computed */
topbar-components = (topbar-height (2 * topbar-border))
